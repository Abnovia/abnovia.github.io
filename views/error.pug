extends layout

block append head
  link(rel='stylesheet', href='/stylesheets/error.css')

block content
  div(class="max-w-2xl mx-auto py-8 px-4")
    div(class="text-center")
      h1(class="text-3xl font-bold text-gray-900 mb-4")= `${statusCode} - ${title}`
      div(class="bg-white p-6 rounded-lg shadow-sm")
        p(class="text-gray-600")= message
      
      if error && error.stack && process.env.NODE_ENV === 'development'
        details(class="mt-6 text-left")
          summary(class="cursor-pointer text-sm text-gray-600 hover:text-gray-900") Technical Details
          pre(class="mt-2 p-4 bg-gray-50 rounded-lg overflow-x-auto text-sm")
            code= error.stack
      
      div(class="mt-8")
        a(href="/" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500") Back to Home
