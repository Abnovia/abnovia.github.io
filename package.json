{
  "name": "event_registration",
  "version": "1.0.0",
  "private": true,
  "description": "Event Registration System",
  "main": "app.js",
  "scripts": {
    "start": "node start.js",
    "dev": "concurrently \"nodemon start.js\" \"pnpm run build:css\"",
    "build:css": "tailwindcss -i ./public/stylesheets/tailwind.css -o ./public/stylesheets/style.css --watch",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "build": "npm run build-client",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-auth": "^4.2.0",
    "mongoose": "^7.1.0",
    "nodemon": "^3.0.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.3.3"
  }
}
