# MongoDB Connection String
# Get this from MongoDB Atlas (https://www.mongodb.com/cloud/atlas)
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
DATABASE=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/blog?retryWrites=true&w=majority

# Server Port (default: 7000)
PORT=7000

# Node Environment (development or production)
NODE_ENV=production

# Frontend URL (for CORS in production)
FRONTEND_URL=https://your-app-name.up.railway.app

# Admin Authentication (REQUIRED for login)
# Generate password hash using: node scripts/generate-password.js <your-password>
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$10$examplehashhere

# JWT Secret (REQUIRED - use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-use-random-string
